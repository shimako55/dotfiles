# coreutils
alias ..='cd ..'
alias ls='ls -la --color=auto'
alias ll='ls -laF --color=auto'
alias grep='grep --color=auto'
alias now='date "+%Y-%m-%d %H:%M:%S"'

# GNU sed
if [[ -x `which gsed` ]]; then
  alias sed="gsed"
fi
if [[ -x `which tree` ]]; then
  alias tree="tree -I 'node_modules|vendor' -L 5"
fi

# Incremental search
if [[ -x `which peco` ]]; then
  # ghq
  alias g='cd $(ghq root)/$(ghq list | fzf)'

  # kube
  if [[ -x `which kubectl` ]]; then
    alias k='kubectl'
    alias kc='kubectx | fzf | xargs kubectx'
    alias kn='kubens | fzf | xargs kubens'
  fi
fi

if [[ -x `which eza` ]] then
  alias ls='eza --icons --git -al'
  alias ll='eza --icons --git -labGF'
  alias l='eza --icons --git -lbhHigUmuSa@ --time-style=long-iso --color-scale'
  alias lt='eza --tree --level=10'
  alias lti='eza --icons --git --tree --level=10'
fi

if [[ -x `which bat` ]] then
  alias cat='bat'
fi

if [[ "$OSTYPE" == "darwin"* ]]; then
    alias co='pbcopy'
    alias pa='pbpaste'
fi

# lazygit
if [[ -x `which lazygit` ]]; then
  alias lg="lazygit"
fi

# nvim
if [[ -x `which nvim` ]]; then
  alias n="nvim"
  alias vi="nvim"
  alias vim="nvim"
  alias ex="nvim"
  # alias ed="nvim"
fi

# k9s
if [[ -x `which k9s` ]]; then
  alias k9s="k9s --readonly"
fi

# pip plamo-translate
if [[ -x `which plamo-translate` ]]; then
  alias pt="plamo-translate --to Japanese"
fi
